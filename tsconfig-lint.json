{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "checkJs": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
